{% extends 'base.html.twig' %}

{% block title %}Hello CoursesController!{% endblock %}

{% block body %}
<style>
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
        }
        tr:hover {
            background-color: #f5f5f5;
        }
    </style>
<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Duration</th>
            <th>Zone</th>
            <th>Date</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
       {% for course in courses %}
        <tr>
            <td>{{ course.title }}</td>
            <td>{{ course.description }}</td>
            <td>{{ course.duration}} /min</td>
            <td>{{ course.zone.name }}</td>
            <td>{{ course.startDatetime|date('d-m-Y h:m') }}</td>
            <td><a href="{{ path('app_courses_edit', {'id': course.id }) }}">Modifier</button></td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}
