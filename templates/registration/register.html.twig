{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1>Inscription</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
            {# {{ form_errors(registrationForm.email) }} #}

        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        
{{ form_row(registrationForm.userProfil.firstName) }}
{{ form_row(registrationForm.userProfil.lastName) }}
{{ form_row(registrationForm.userProfil.phone) }}
{{ form_row(registrationForm.userProfil.adress) }}
{{ form_row(registrationForm.userProfil.dateOfBirth) }}
{{ form_row(registrationForm.userProfil.bio) }}
{{ form_row(registrationForm.agreeTerms) }}
        <button type="submit" class="btn">Register</button>
    {{ form_end(registrationForm) }}
{% endblock %}
