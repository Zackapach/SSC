{% extends 'base.html.twig' %}

{% block title %}Réserver un Cours{% endblock %}

{% block body %}
    <style>
        .body {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            background-color: #f5f5f5;
        }

        .container {
            width: 60vw;
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border: 2px solid #c0392b;
        }

        h1 {
            color: #c0392b;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-group label{
            width: 150px;
        }

        .form-group input, .form-group textarea{
            width: 350px;
        }

        .form-control {
            border: 1px solid #c0392b;
            padding: 10px;
            width: 100%;
            border-radius: 4px;
            margin-top: 5px;
        }

        .form-control:focus {
            border-color: #e74c3c;
            box-shadow: 0 0 5px rgba(231, 76, 60, 0.6);
        }

        .btn-primary {
            background-color: #c0392b;
            border: none;
            color: white;
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
            width: 100%;
            border-radius: 4px;
        }

        .btn-primary:hover {
            background-color: #e74c3c;
        }

        .form-label {
            color: #333;
            font-weight: bold;
        }

        .form-errors {
            color: red;
            font-size: 0.9rem;
            margin-top: 5px;
        }
    </style>

    <section class="body">
        <div class="container">
            <h1>Réserver un Cours</h1>

            {{ form_start(reservationForm) }}
            
            <div class="form-group">
                {{ form_label(reservationForm.title, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(reservationForm.title, {'attr': {'class': 'form-control'}}) }}
                <div class="form-errors">
                    {{ form_errors(reservationForm.title) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(reservationForm.description, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(reservationForm.description, {'attr': {'class': 'form-control'}}) }}
                <div class="form-errors">
                    {{ form_errors(reservationForm.description) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(reservationForm.calendrier, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(reservationForm.calendrier, {'attr': {'class': 'form-control'}}) }}
                <div class="form-errors">
                    {{ form_errors(reservationForm.calendrier) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(reservationForm.heure, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(reservationForm.heure, {'attr': {'class': 'form-control'}}) }}
                <div class="form-errors">
                    {{ form_errors(reservationForm.heure) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(reservationForm.duration, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(reservationForm.duration, {'attr': {'class': 'form-control'}}) }}
                <div class="form-errors">
                    {{ form_errors(reservationForm.duration) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(reservationForm.disponible, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(reservationForm.disponible, {'attr': {'class': 'form-control'}}) }}
                <div class="form-errors">
                    {{ form_errors(reservationForm.disponible) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(reservationForm.nombrePlaceDisponible, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(reservationForm.nombrePlaceDisponible, {'attr': {'class': 'form-control'}}) }}
                <div class="form-errors">
                    {{ form_errors(reservationForm.nombrePlaceDisponible) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(reservationForm.user, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(reservationForm.user, {'attr': {'class': 'form-control'}}) }}
                <div class="form-errors">
                    {{ form_errors(reservationForm.user) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(reservationForm.zone, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(reservationForm.zone, {'attr': {'class': 'form-control'}}) }}
                <div class="form-errors">
                    {{ form_errors(reservationForm.zone) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(reservationForm.notifcation, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(reservationForm.notifcation, {'attr': {'class': 'form-control'}}) }}
                <div class="form-errors">
                    {{ form_errors(reservationForm.notifcation) }}
                </div>
            </div>

            <button type="submit" class="btn-primary">Réserver</button>

            {{ form_end(reservationForm) }}
        </div>
    </section>

{% endblock %}
