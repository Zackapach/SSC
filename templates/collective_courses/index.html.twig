{% extends 'base.html.twig' %}

{% block title %}Hello CoursesController!{% endblock %}

{% block body %}
    <a href="{{ path('app_collective_courses_new') }}">Ajouter des cours collectif</a>
<style>
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 200px;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
        }
        tr:hover {
            background-color: #f5f5f5;
        }
    </style>
<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Jours de la semaine</th>
            <th>Zone</th>
            <th>Heure de debut/fin</th>
            <th>Couleur</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
       {% for planning in plannings %}
        <tr>
            <td>{{ planning.cour.title }}</td>
            <td>{{ planning.cour.description }}</td>
            <td>
                {% for day in planning.daysOfWeek %}
                    {{ day.name }} ,
                {% endfor %}
            </td>
            <td>{{ planning.zone.name }}</td>
            <td>{{ planning.heureDebut|date('H:i') }} - {{ planning.heureFin|date('H:i') }}</td>
            <td style="background-color: {{ planning.color }}">{{ planning.color }}</td>
{#            <td><a href="{{ path('app_courses_edit', {'id': course.id }) }}">Modifier</button></td>#}
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}
